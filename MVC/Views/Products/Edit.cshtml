@model EditProductViewModel;
@{
    ViewData["Title"] = "Products";
}

<div class="px-10 flex justify-center">
    <div class="md:w-1/2 w-full mt-10">
        <form method="post" enctype="multipart/form-data" asp-action="Edit"
            class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-xs italic"></div>
            <input asp-for="Id" hidden />
            <div class="mb-4">
                <label asp-for="Name" class="block text-gray-700 text-sm font-bold mb-2">
                </label>
                <input asp-for="Name" autocomplete="off"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                <span asp-validation-for="Name" class="text-red-500 text-xs italic"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Price" class="block text-gray-700 text-sm font-bold mb-2">
                </label>
                <input asp-for="Price" autocomplete="off" type="number"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                <span asp-validation-for="Price" class="text-red-500 text-xs italic"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Image" class="block text-gray-700 text-sm font-bold mb-2">
                </label>
                <input asp-for="Image" accept="image/*"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                <span asp-validation-for="Image" class="text-red-500 text-xs italic"></span>
            </div>
            <div class="flex items-center justify-between">
                <button
                    class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    ثبت
                </button>
            </div>
        </form>
    </div>

</div>