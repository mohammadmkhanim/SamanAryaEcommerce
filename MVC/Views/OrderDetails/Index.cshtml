@model OrderDetailViewModel;
@{
    ViewData["Title"] = "OrderDetails";
}
<div class="px-10">
    <div class="mb-5">
        <span class="text-lg font-bold">تاریخ خرید: </span>
        @Model.DateTime
    </div>
    <span class="text-lg font-bold">محصولات: </span>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
        @foreach (var p in Model.Products)
        {
            <div class="border-2 m-2">
                <label class="block border shadow-xl rounded-md ">
                    <partial name="../Products/_CardPartial.cshtml" model="p" />
                </label>
            </div>
        }
    </div>
</div>